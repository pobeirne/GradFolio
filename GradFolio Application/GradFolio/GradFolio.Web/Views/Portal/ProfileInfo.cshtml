@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_LayoutPortal.cshtml";
}

@*Page Title*@
<div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12" style="padding-top: 0">
        <h2 class="page-header" style="margin-top: 22px; margin-bottom: 10px;">
            @ViewBag.Title
        </h2>
    </div>
</div>

@*Page Filter Controls*@
<div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12">
        <span class="pull-right">
            <button class="btn btn-primary btn-sm" onclick="reloadBtnClick();" type="button">
                Reload&nbsp;&nbsp;<span aria-hidden="true" class="glyphicon glyphicon-refresh"></span>
            </button>
            <button class="btn btn-success btn-sm" onclick="itemBtnClick('edit', '');" type="button">
                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                Edit Profile
            </button>
        </span>
    </div>
</div>
<hr style="margin-top: 10px;"/>

@*Page Content*@
<div id="container">
    <div id="content">
    </div>
</div>

@*View model container*@
<div class="modal fade" id="popupModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content" id="popupcontainer">

        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        //URL Parameters
        var loadContent_url = "@Html.Raw(Url.Action("ViewProfile", "Profile"))";
        var editContent_url = "@Html.Raw(Url.Action("EditProfile", "Profile"))";
    </script>
    <script src="~/Scripts/portal/portal-default.js"></script>
}


