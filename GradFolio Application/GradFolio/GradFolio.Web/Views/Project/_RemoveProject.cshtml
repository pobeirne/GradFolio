@model GradFolio.Core.ViewModels.ProjectViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-header" style="background-color: #000000; color: #f5fffa">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true" style="color: #ffffff">&times;</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Are you sure you want to delete this?</h4>
    </div>
    <div class="modal-body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            <div class="thumbnail">
                <ul class="list-group" style="margin-bottom: 0;">
                    <li class="list-group-item">
                        <span class=" glyphicon glyphicon-education" aria-hidden="true"></span><span> Title: @Model.Title </span>
                    </li>
                
                    <li class="list-group-item">
                        <span class=" glyphicon glyphicon-education" aria-hidden="true"></span><span> Create Date: @Model.CreateDate </span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="modal-footer" style="background-color: #000000; color: #f5fffa">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button id="btn-content-remove-submit" type="button" class="btn btn-danger">Remove</button>
    </div>
}

