@model IEnumerable<GradFolio.Core.ViewModels.CourseViewModel>
<div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12" style="max-height: 660px; overflow-y: auto; margin-bottom: 20px;">
        @foreach (var item in Model)
        {
            <div class="col-lg-6 col-md-6 col-xs-12">
                <div class="thumbnail">
                    <ul class="list-group" style="margin-bottom: 0;">
                        <li class="list-group-item">
                            <span class=" glyphicon glyphicon-education" aria-hidden="true"></span><span> Course: @item.Title </span>
                        </li>
                        <li class="list-group-item">
                            <span class="glyphicon glyphicon-home" aria-hidden="true"></span><span> College: @item.College </span>
                        </li>
                        <li class="list-group-item">
                            <span class=" glyphicon glyphicon-calendar" aria-hidden="true"></span>
                            <span> From: @item.StartDate.ToShortDateString() </span>
                            <span class="pull-right"> To: @item.StartDate.ToShortDateString() </span>
                        </li>
                    </ul>
                </div>
                <div class="pull-right" style="margin-bottom: 10px;">
                    <button type="button" class="btn btn-info btn-sm" onclick="itemBtnClick('view', '?itemId=@item.Id');">Full Details</button>
                    <button type="button" class="btn btn-primary btn-sm" onclick="itemBtnClick('edit', '?itemId=@item.Id');">Edit Course</button>
                    <button type="button" class="btn btn-danger btn-sm" onclick="itemBtnClick('remove', '?itemId=@item.Id');">Remove</button>
                </div>
            </div>
        }
    </div>
</div>

