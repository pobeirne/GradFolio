@model GradFolio.Core.ViewModels.PortfolioModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-header" style="background-color: #000000; color: #f5fffa">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true" style="color: #ffffff">&times;</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Are you sure you want to delete this?</h4>
    </div>
    <div class="modal-body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)


            <div class="form-group">
                @Html.LabelFor(model => model.Type, new { @class = "control-label col-lg-4 col-md-4 col-xs-12" })
                <div class="col-lg-8 col-md-8 col-xs-12">
                    @Html.DisplayFor(model => model.Type, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.RefNum, new { @class = "control-label col-lg-4 col-md-4 col-xs-12" })
                <div class="col-lg-8 col-md-8 col-xs-12">
                    @Html.DisplayFor(model => model.RefNum, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Type, new { @class = "control-label col-lg-4 col-md-4 col-xs-12" })
                <div class="col-lg-8 col-md-8 col-xs-12">
                    @Html.DisplayFor(model => model.Type, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.CreateDate, new { @class = "control-label col-lg-4 col-md-4 col-xs-12" })
                <div class="col-lg-8 col-md-8 col-xs-12">
                    @Html.DisplayFor(model => model.CreateDate, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer" style="background-color: #000000; color: #f5fffa">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button id="btn-content-remove-submit" type="button" class="btn btn-danger">Remove</button>
    </div>
}

